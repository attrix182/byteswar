{
  "name": "byteswar",
  "type": "application",
  "buildPack": "dockerfile",
  "dockerfilePath": "./Dockerfile",
  "dockerComposePath": "./docker-compose.production.yml",
  "port": 3001,
  "internalPort": 3001,
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "HOST": "0.0.0.0",
    "DEBUG": "false",
    "LOG_LEVEL": "info",
    "ENABLE_CORS": "true",
    "CORS_ORIGINS": "*",
    "ENABLE_CREDENTIALS": "false",
    "CLIENT_URL": "http://byteswar.31.97.151.147.sslip.io",
    "COOLIFY_PROXY": "true",
    "TRUST_PROXY": "true"
  },
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "startPeriod": 40
  },
  "networks": {
    "driver": "bridge"
  },
  "restartPolicy": "always"
} 